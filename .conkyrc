out_to_x yes
out_to_console no 
update_interval 1.0
total_run_times 0
use_spacer none
own_window yes
own_window normal

TEXT

${time %R %a,%d-%#b-%y} | ${execpi 300 wget -O - http://www.reddit.com/user/4wd22r/about.json |
    awk '{match($0, "k_karma\": ([0-9]+)", a);
    match ($0, "t_karma\": ([0-9]+)", b);
    print "L:", a[1], "C:", b[1];}}'| Up:${uptime_short} | ${addr wlan0} | RAM:$memperc% | CPU:${cpu}% | ${upspeed wlan0}/${downspeed wlan0}
