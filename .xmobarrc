Config { font = "xft:DejaVu Sans Mono:pixelsize=12"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100 
       , commands = [ Run Date "%a %b %_d %H:%M" "date" 10
                    , Run MultiCpu ["-L","3","-H","50","--normal","green","--high","red","-p","3","-t","Cpu: <total0> <total1> <total2> <total3>"] 10
                    , Run Com "awk '{print $1,$2,$3}' /proc/loadavg" [] "load" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %load% %multicpu% <fc=#ee9a00>%date%</fc> "
       }
