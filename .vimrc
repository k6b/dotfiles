syntax enable
filetype plugin indent on

if has('gui_running')
       set background=light
   else
       set background=dark
   endif

colorscheme solarized

set ruler

set mouse=a

set formatoptions=c,q,r,t

set textwidth=85

set autoindent

set ignorecase
set smartcase

set hlsearch
set incsearch

set showmatch

set number

set showcmd

set shiftwidth=4
set tabstop=4

set expandtab
set smarttab
